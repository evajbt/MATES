
<div class="container">
  <div class="search-text col-10 mx-auto">
    <h1><strong>Find your perfect Mate</strong></h1>
    <p>Edit or add filters to match with new players!</p>
  </div>
  <div class="form-bg col-10 mx-auto">
    <%= form_with(url: search_profiles_path, method: :get, class: 'row gy-3') do |form| %>

      <div class="mx-auto">
        <%= form.label :name, "Game name", required: true, class: "form-label" %>
        <div class="InputContainer">
          <%= form.select :name, Game.pluck(:name), {}, class: "input" %>
        </div>

      </div>
    </div>


      <div class="mx-auto">
        <%= form.label :level, "Level (1 to 5)", class: "form-label" %>
        <div class="InputContainer">
          <%= form.number_field :level, class: "input custom-number-input", no_spinner: true %>
        </div>

      </div>
    </div>


      <div class="mx-auto">
        <%= form.label :mood, "Mood", class: "form-label" %>
        <div class="InputContainer">
          <%= form.select :mood, ['Chill', 'Try hard', 'Competitive'], {}, class: "input" %>
        </div>

      </div>
    </div>


      <div class="mx-auto">
        <%= form.label :gender, "Gender", class: "form-label" %>
        <div class="InputContainer">
          <%= form.select :gender, ['masculine', 'feminine'], { prompt: "Let me if you don't care" }, class: "input" %>
        </div>

      </div>
    </div>


      <div class="mx-auto">
        <%= form.label :age, "Age", class: "form-label" %>
        <div class="InputContainer">
          <%= form.number_field :age, class: "input custom-number-input", no_spinner: true %>
        </div>

      </div>
    </div>


      <div class="mx-auto">
        <%= form.submit "Find me a mate", class: "btn custom-button" %>
      </div>
    <% end %>
  </div>

</div>
