
<h1>Match Details</h1>
<% if @match %>
  <p>You have a new match with <%= @match.like.liked.username %>!</p>
  <!-- Afficher d'autres détails du match ici -->
<% end %>

<%= simple_form_for [ @match.conversations.first, Message.new ], html: { class: 'new-message' } do |f| %>
  <%= f.input :content, label: false, input_html: { placeholder: 'Salut! Ça va?' }, required: true %>
  <%= f.hidden_field :first,value:"true"%>
  <%= f.button :submit, 'Envoyer' %>
<% end %>
